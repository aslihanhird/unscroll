<div class="pt-4 container post-card">
  <% @favourite_posts.each do |post| %>
    <div class="d-flex justify-content-between mb-2">
        <div class="d-flex align-items-left align-items-center">
            <%= cl_image_tag(post.profile.photo.key, class: "avatar mr-3") %>
            <%= post.profile.username  %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <i class="fa-brands fa-instagram"></i>
          <%# link below needs to change to ???? %>
          <%= link_to "Delete", favourite_insta_post_path(post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post from your favourites?' }, class: "primary-color ms-3" %>
        </div>
    </div>

    <% if post.media_type == 'video' %>
      <%= cl_video_tag(post.videos[0].key, class: "mb-2 img-post", preload: "none", controls: true) %>
    <% elsif post.media_type == 'photo' %>
      <%= cl_image_tag(post.photos[0].key, class:"mb-2 img-post") %>
    <% end %>
    <p class="margin-bottom-caption"><%= post.caption %></p>
  <% end %>
</div>
