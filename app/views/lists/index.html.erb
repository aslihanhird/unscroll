<div class="main-background"></div>

<div class="container pt-4">
  <h1 class="welcome-message">Welcome, <span class="italic-accent"><%= current_user.username %></span>.</h1>
  <h2 class="subheader">Let's get you up to date with your social media.</h2>

  <h3 class="your-lists">Your lists</h3>

  <div class="lists-wrapper">
    <% @lists.each do |list| %>
      <%= render "shared/single_list", list: list %>
    <% end %>
  </div>

  <%# TODO: Make this a link %>
  <%= link_to new_list_path do %>
    <div class="new-list-btn shadowed">
      <i class="fa-solid fa-plus"></i>
    </div>
  <% end %>
</div>
