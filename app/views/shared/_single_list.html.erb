
<div class="list-wrapper" data-controller="list">
  <div class="list-icon" data-action="click->list#showOptions" data-list-target="viewOptions">
    <i class="fa-solid fa-gear"></i> <span class="icon-text">options</span>
  </div>

  <div class="list-icon d-none" data-action="click->list#showOptions" data-list-target="back">
    <i class="fa-solid fa-arrow-left"></i> <span class="icon-text">back</span>
  </div>

  <%= link_to list_path(list), data: {list_target: "main"} do  %>
    <div class="list-main-content">
      <h3><%= list.name %></h3>
      <p class="list-main-subtext">
        <%= list.insta_posts.size %> new updates.
      </p>
    </div>
  <% end %>

  <%# TODO: Add the accurate links %>
  <div class="list-main-content list-options d-none" data-list-target="options">
    <div class="list-edit">
      <%= link_to edit_list_path(list) do %>
        <h3>Edit</h3>
      <% end %>
    </div>
    <div class="list-delete">
      <%= link_to list_path(list), data: {turbo_method: "delete", turbo_confirm: "Ya Sure?"} do %>
        <h3>Delete</h3>
      <% end %>
    </div>
  </div>
</div>
